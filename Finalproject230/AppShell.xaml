<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Finalproject230.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:Finalproject230.ViewModel"
    xmlns:local="clr-namespace:Finalproject230.View"
    Shell.FlyoutBehavior="Flyout"
    x:DataType="viewmodels:MainViewModel">

    <Shell.BindingContext>
        <viewmodels:MainViewModel/>
    </Shell.BindingContext>

    <FlyoutItem Title="Solar Data">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"/>
    </FlyoutItem>
    <FlyoutItem Title="Solar Line Graph">
        <ShellContent
            ContentTemplate="{DataTemplate local:GraphView}"/>
    </FlyoutItem>
    <FlyoutItem Title="Raw Data">
        <ShellContent
            ContentTemplate="{DataTemplate local:RawDataView}"/>
    </FlyoutItem>
    <Shell.FlyoutFooter>
        <Grid HeightRequest="100" >
            <HorizontalStackLayout>
                <VerticalStackLayout>
                    <Label
                        Text="Hello, USB"
                        Padding="10,0"/>
                    <Label
                        IsVisible="false"
                        Text="{Binding solarData.ValidPacket}"/>
                    
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Grid>

    </Shell.FlyoutFooter>
</Shell>